@model ISpan.InseparableCore.ViewModels.COrderVM
@{
    ViewData["Title"] = "Delete";
}


<h3>確定要刪除嗎?</h3>
<div>
    <hr />
    <dl class="row">
        @if (ViewBag.error != null)
        {
            <h3 style="background-color:palevioletred;color:dimgrey;">@ViewBag.error</h3>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FOrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FOrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FModifiedTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FModifiedTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FMember)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FMember.FMemberId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FCinema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FCinema.FCinemaName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FCreditTradeNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FCreditTradeNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FTotalMoney)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FTotalMoney)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FStatus)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FOrderId" />
        <input type="submit" value="刪除" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-light">取消</a>
    </form>
</div>
