@model IEnumerable<ISpan.InseparableCore.Models.TArticles>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
	<div class="col-md-4">
		<form asp-action="Index" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label name="Title" class="control-label"></label>
				<input name="Title" class="form-control" />
@*				<span asp-validation-for="Title" class="text-danger"></span>
*@			</div>
			<div class="form-group">
				<label name="MemberId" class="control-label"></label>
				<select name="MemberId" class="form-control" asp-items="ViewBag.FMemberId"></select>
			</div>
			<div class="form-group">
				<label name="CategoryId" class="control-label"></label>
				<select name="CategoryId" class="form-control" asp-items="ViewBag.FArticleCategoryId"></select>
			</div>
			<div class="form-group">
				<input type="submit" value="search" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FArticleTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FArticlePostingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FArticleLikes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FArticleClicks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FArticleContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FArticleCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FMember)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FArticleTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FArticlePostingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FArticleLikes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FArticleClicks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FArticleContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FArticleCategory.FMovieCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FMember.FFirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FArticleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FArticleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FArticleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
