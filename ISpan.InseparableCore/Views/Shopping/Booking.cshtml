@section Styles{
                  <link href="~/css/blog.css" rel="stylesheet">
                                    <style>
                                        th, td {
                                            width: 220px;
                                            font-size: 20px;
                                            padding: 3px;
                                        }

                                        span {
                                            display: inline-block;
                                            width: 250px;
                                            margin: 10px;
                                        }

                                        select {
                                            width: 40%;
                                        }

                                        p {
                                            display: inline;
                                        }

                                        th {
                                            background-color: #6FB7B7;
                                        }

                                        .background {
                                            background-color: #0080FF;
                                            padding: 3px;
                                        }

