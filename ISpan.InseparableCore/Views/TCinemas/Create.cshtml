            </div>
            <div class="form-group">
                <label asp-for="FCinemaRegion" class="control-label"></label>
                <input asp-for="FCinemaRegion" class="form-control input" />
                <span asp-validation-for="FCinemaRegion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FCinemaAddress" class="control-label"></label>
                <input asp-for="FCinemaAddress" class="form-control input" />
                <span asp-validation-for="FCinemaAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FCinemaTel" class="control-label"></label>
                <input asp-for="FCinemaTel" class="form-control input" />
                <span asp-validation-for="FCinemaTel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FLat" class="control-label"></label>
