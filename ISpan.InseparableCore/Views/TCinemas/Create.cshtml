            <div class="form-group">
                <label asp-for="FTraffic" class="control-label"></label>
                <input asp-for="FTraffic" class="form-control input" />
                <span asp-validation-for="FTraffic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
