@model ISpan.InseparableCore.ViewModels.TCinemasVM.CTCinemasVM
@{
    ViewData["Title"] = "Delete";
}


<h3>確定要刪除嗎?</h3>
<div>
    <hr />
    @if (ViewBag.error != null)
    {
        <h3 style="background-color:palevioletred;color:dimgrey;">@ViewBag.error</h3>
    }
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FCinemaName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FCinemaName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FCinemaRegion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FCinemaRegion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FCinemaAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FCinemaAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FCinemaTel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FCinemaTel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FLat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FLat)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FLng)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FLng)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FTraffic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FTraffic)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FCinemaId" />
        <input type="submit" value="刪除" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-light">返回</a>
    </form>
</div>
