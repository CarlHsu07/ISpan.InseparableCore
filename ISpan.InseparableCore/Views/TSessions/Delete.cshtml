@model ISpan.InseparableCore.ViewModels.CSessionVM

@{
    ViewData["Title"] = "Delete";
}


<h3>確定要刪除嗎?</h3>
<div>
    <hr />
    <dl class="row">
        @if (ViewBag.error != null)
        {
            <h3 style="background-color:palevioletred;color:dimgrey;">@ViewBag.error</h3>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FSessionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FSessionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FSessionTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FSessionTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FMovie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FMovie.FMovieName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FCinema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FCinema.FCinemaName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FRoom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FRoom.FRoomName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FTicketPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FTicketPrice)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FSessionId" />
        <input type="submit" value="刪除" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-light">取消</a>
    </form>
</div>
