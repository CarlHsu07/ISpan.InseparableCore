@model IEnumerable<ISpan.InseparableCore.ViewModels.CFriendListViewModel>

@{
    ViewData["Title"] = "FriendList";
}

<h1>好友清單</h1>

<table class="table text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoPath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoPath)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>

<div class="friend-list">
    @foreach (var friend in Model)
    {
        <div class="friend-item">
            <a asp-controller="Member" asp-action="Profile" asp-route-Id="@friend.Id">
                <img src="@Url.Content(friend.PhotoPath)" alt="會員的大頭貼照" />
                <span>@friend.LastName@friend.FirstName</span>
            </a>
        </div>
    }
</div>
